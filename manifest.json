{
  "manifest_version": 3,
  "name": "OA Extension",
  "version": "0.0.5",
  "description": "A Chrome extension tailored to improve our clinic workflows when interacting with OA applications.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab", "sidePanel", "tabs"],
  "action": {
    "default_title": "OA Extension"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://pm.officeally.com/pm/ManagePatients/EditPatient.aspx?*"
      ],
      "js": ["content-scripts/pm-edit-patient.js"]
    },
    {
      "matches": [
        "https://pm.officeally.com/pm/PatientVisits/EditVisit.aspx?*"
      ],
      "js": ["content-scripts/pm-edit-visit.js"]
    }
  ]
}
